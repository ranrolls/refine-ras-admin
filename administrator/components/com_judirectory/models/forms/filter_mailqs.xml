<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUDIRECTORY_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_JUDIRECTORY_LIST_FULL_ORDERING"
                description="COM_JUDIRECTORY_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="m.priority ASC"
                >
            <option value="">COM_JUDIRECTORY_SORT_BY</option>
            <option value="m.subject ASC">COM_JUDIRECTORY_SORT_BY_SUBJECT_ASC</option>
            <option value="m.subject DESC">COM_JUDIRECTORY_SORT_BY_SUBJECT_DESC</option>
            <option value="mq.created ASC">COM_JUDIRECTORY_SORT_BY_CREATED_ASC</option>
            <option value="mq.created DESC">COM_JUDIRECTORY_SORT_BY_CREATED_DESC</option>
            <option value="m.priority ASC">COM_JUDIRECTORY_SORT_BY_PRIORITY_ASC</option>
            <option value="m.priority DESC">COM_JUDIRECTORY_SORT_BY_PRIORITY_DESC</option>
            <option value="mq.attempts ASC">COM_JUDIRECTORY_SORT_BY_ATTEMPTS_ASC</option>
            <option value="mq.attempts DESC">COM_JUDIRECTORY_SORT_BY_ATTEMPTS_DESC</option>
            <option value="mq.last_attempt ASC">COM_JUDIRECTORY_SORT_BY_LAST_ATTEMPT_ASC</option>
            <option value="mq.last_attempt DESC">COM_JUDIRECTORY_SORT_BY_LAST_ATTEMPT_DESC</option>
            <option value="mq.send_date ASC">COM_JUDIRECTORY_SORT_BY_SEND_DATE_ASC</option>
            <option value="mq.send_date DESC">COM_JUDIRECTORY_SORT_BY_SEND_DATE_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUDIRECTORY_LIST_LIMIT"
                description="COM_JUDIRECTORY_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>