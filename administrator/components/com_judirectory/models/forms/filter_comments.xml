<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUDIRECTORY_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_JUDIRECTORY_LIST_FULL_ORDERING"
                description="COM_JUDIRECTORY_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="cm.created DESC"
                >
            <option value="">COM_JUDIRECTORY_SORT_BY</option>
            <option value="cm.id ASC">COM_JUDIRECTORY_SORT_BY_ID_ASC</option>
            <option value="cm.id DESC">COM_JUDIRECTORY_SORT_BY_ID_DESC</option>
            <option value="cm.title ASC">COM_JUDIRECTORY_SORT_BY_TITLE_ASC</option>
            <option value="cm.title DESC">COM_JUDIRECTORY_SORT_BY_TITLE_DESC</option>
            <option value="listing.title ASC">COM_JUDIRECTORY_SORT_BY_LISTING_TITLE_ASC</option>
            <option value="listing.title DESC">COM_JUDIRECTORY_SORT_BY_LISTING_TITLE_DESC</option>
            <option value="ua.name ASC">COM_JUDIRECTORY_SORT_BY_USER_NAME_ASC</option>
            <option value="ua.name DESC">COM_JUDIRECTORY_SORT_BY_USER_NAME_DESC</option>
            <option value="ua.email ASC">COM_JUDIRECTORY_SORT_BY_EMAIL_ASC</option>
            <option value="ua.email DESC">COM_JUDIRECTORY_SORT_BY_EMAIL_DESC</option>
            <option value="cm.total_votes ASC">COM_JUDIRECTORY_SORT_BY_TOTAL_VOTES_ASC</option>
            <option value="cm.total_votes DESC">COM_JUDIRECTORY_SORT_BY_TOTAL_VOTES_DESC</option>
            <option value="cm.helpful_votes ASC">COM_JUDIRECTORY_SORT_BY_HELPFUL_VOTES_ASC</option>
            <option value="cm.helpful_votes DESC">COM_JUDIRECTORY_SORT_BY_HELPFUL_VOTES_DESC</option>
            <option value="cm.created ASC">COM_JUDIRECTORY_SORT_BY_CREATED_ASC</option>
            <option value="cm.created DESC">COM_JUDIRECTORY_SORT_BY_CREATED_DESC</option>
            <option value="cm.ip_address ASC">COM_JUDIRECTORY_SORT_BY_IP_ADDRESS_ASC</option>
            <option value="cm.ip_address DESC">COM_JUDIRECTORY_SORT_BY_IP_ADDRESS_DESC</option>
            <option value="cm.published ASC">COM_JUDIRECTORY_SORT_BY_PUBLISHED_ASC</option>
            <option value="cm.published DESC">COM_JUDIRECTORY_SORT_BY_PUBLISHED_DESC</option>
            <option value="total_reports ASC">COM_JUDIRECTORY_SORT_BY_TOTAL_REPORTS_ASC</option>
            <option value="total_reports DESC">COM_JUDIRECTORY_SORT_BY_TOTAL_REPORTS_DESC</option>
            <option value="total_subscriptions ASC">COM_JUDIRECTORY_SORT_BY_TOTAL_SUBSCRIPTIONS_ASC</option>
            <option value="total_subscriptions DESC">COM_JUDIRECTORY_SORT_BY_TOTAL_SUBSCRIPTIONS_DESC</option>
            <option value="cm.lft ASC">COM_JUDIRECTORY_SORT_BY_ORDERING_ASC</option>
            <option value="cm.lft DESC">COM_JUDIRECTORY_SORT_BY_ORDERING_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUDIRECTORY_LIST_LIMIT"
                description="COM_JUDIRECTORY_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>