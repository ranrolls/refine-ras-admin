<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUDIRECTORY_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_JUDIRECTORY_LIST_FULL_ORDERING"
                description="COM_JUDIRECTORY_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="fg.ordering ASC"
                >
            <option value="">COM_JUDIRECTORY_SORT_BY</option>
            <option value="fg.id ASC">COM_JUDIRECTORY_SORT_BY_ID_ASC</option>
            <option value="fg.id DESC">COM_JUDIRECTORY_SORT_BY_ID_DESC</option>
            <option value="fg.name ASC">COM_JUDIRECTORY_SORT_BY_NAME_ASC</option>
            <option value="fg.name DESC">COM_JUDIRECTORY_SORT_BY_NAME_DESC</option>
            <option value="fg.ordering ASC">COM_JUDIRECTORY_SORT_BY_ORDERING_ASC</option>
            <option value="fg.ordering DESC">COM_JUDIRECTORY_SORT_BY_ORDERING_DESC</option>
            <option value="fg.published ASC">COM_JUDIRECTORY_SORT_BY_PUBLISHED_ASC</option>
            <option value="fg.published DESC">COM_JUDIRECTORY_SORT_BY_PUBLISHED_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUDIRECTORY_LIST_LIMIT"
                description="COM_JUDIRECTORY_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>