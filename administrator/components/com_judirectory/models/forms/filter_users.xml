<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUDIRECTORY_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_JUDIRECTORY_LIST_FULL_ORDERING"
                description="COM_JUDIRECTORY_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="ua.name ASC"
                >
            <option value="">COM_JUDIRECTORY_SORT_BY</option>
            <option value="ua.id ASC">COM_JUDIRECTORY_SORT_BY_ID_ASC</option>
            <option value="ua.id DESC">COM_JUDIRECTORY_SORT_BY_ID_DESC</option>
            <option value="ua.name ASC">COM_JUDIRECTORY_SORT_BY_NAME_ASC</option>
            <option value="ua.name DESC">COM_JUDIRECTORY_SORT_BY_NAME_DESC</option>
            <option value="ua.username ASC">COM_JUDIRECTORY_SORT_BY_USERNAME_ASC</option>
            <option value="ua.username DESC">COM_JUDIRECTORY_SORT_BY_USERNAME_DESC</option>
            <option value="ua.block ASC">COM_JUDIRECTORY_SORT_BY_ENABLE_ASC</option>
            <option value="ua.block DESC">COM_JUDIRECTORY_SORT_BY_ENABLE_DESC</option>
            <option value="ua.email ASC">COM_JUDIRECTORY_SORT_BY_EMAIL_ASC</option>
            <option value="ua.email DESC">COM_JUDIRECTORY_SORT_BY_EMAIL_DESC</option>
            <option value="ua.lastvisitDate ASC">COM_JUDIRECTORY_SORT_BY_LAST_VISIT_ASC</option>
            <option value="ua.lastvisitDate DESC">COM_JUDIRECTORY_SORT_BY_LAST_VISIT_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUDIRECTORY_LIST_LIMIT"
                description="COM_JUDIRECTORY_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>