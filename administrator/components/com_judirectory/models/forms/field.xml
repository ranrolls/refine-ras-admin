<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_judirectory/models/rules">
    <fieldset name="details">
        <field name="id"
               type="text"
               default="0"
               readonly="true"
               class="readonly"
               description="COM_JUDIRECTORY_FIELD_ID_DESC"
               label="COM_JUDIRECTORY_FIELD_ID_LABEL"
                />

        <field
                name="asset_id"
                type="hidden"
                filter="unset"
                />

        <field
                name="caption"
                type="text"
                default=""
                size="30"
                required="true"
                class="required"
                filter="raw"
                label="COM_JUDIRECTORY_FIELD_CAPTION_LABEL"
                description="COM_JUDIRECTORY_FIELD_CAPTION_DESC"
                />

        <field
                name="alias"
                type="text"
                default=""
                size="30"
                label="COM_JUDIRECTORY_FIELD_ALIAS_LABEL"
                description="COM_JUDIRECTORY_FIELD_ALIAS_DESC"
                />

        <field
                name="description"
                type="textarea"
                default=""
                cols="50"
                rows="5"
                filter="raw"
                label="COM_JUDIRECTORY_FIELD_DESCRIPTION_LABEL"
                description="COM_JUDIRECTORY_FIELD_DESCRIPTION_DESC"
                />

        <field
                name="group_id"
                type="fieldgroup"
                required="true"
                class="required"
                label="COM_JUDIRECTORY_FIELD_GROUP_LABEL"
                description="COM_JUDIRECTORY_FIELD_GROUP_DESC"
                />

        <field
                name="ordering"
                type="juordering"
                table="field"
                label="COM_JUDIRECTORY_FIELD_ORDERING_LABEL"
                description="COM_JUDIRECTORY_FIELD_ORDERING_DESC"
                />

        <field
                name="access"
                type="accesslevel"
                class="inputbox"
                label="COM_JUDIRECTORY_FIELD_ACCESS_LABEL"
                description="COM_JUDIRECTORY_FIELD_ACCESS_DESC"
                />

        <field name="language"
               type="contentlanguage"
               class="inputbox"
               label="COM_JUDIRECTORY_FIELD_LANGUAGE_LABEL"
               description="COM_JUDIRECTORY_FIELD_LANGUAGE_DESC">
            <option value="*">JALL</option>
        </field>

        <field
                name="plugin_id"
                type="plugins"
                plugintype="field"
                required="true"
                class="inputbox required"
                label="COM_JUDIRECTORY_FIELD_PLUGIN_LABEL"
                description="COM_JUDIRECTORY_FIELD_PLUGIN_DESC"
                >
            <option value="">COM_JUDIRECTORY_SELECT_FIELD_TYPE</option>
        </field>

        <field
                name="predefined_values_type"
                type="list"
                default="1"
                label="COM_JUDIRECTORY_FIELD_PREDEFINED_VALUES_TYPE_LABEL"
                description="COM_JUDIRECTORY_FIELD_PREDEFINED_VALUES_TYPE_DESC">
            <option value="1">COM_JUDIRECTORY_DEFAULT</option>
            <option value="2">COM_JUDIRECTORY_PHP_CODE</option>
        </field>

        <field
                name="predefined_values"
                type="FieldPredefinedValues"
                filter="raw"
                label="COM_JUDIRECTORY_FIELD_PREDEFINED_VALUES_LABEL"
                description="COM_JUDIRECTORY_FIELD_PREDEFINED_VALUES_DESC"
                />

        <field
                name="php_predefined_values"
                type="PHPPredefinedValues"
                filter="raw"
                cols="100"
                rows="15"
                label="COM_JUDIRECTORY_FIELD_PHP_PREDEFINED_VALUES_LABEL"
                description="COM_JUDIRECTORY_FIELD_PHP_PREDEFINED_VALUES_DESC"
                />

        <field
                name="required"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_REQUIRED_LABEL"
                description="COM_JUDIRECTORY_FIELD_REQUIRED_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="list_view"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_LIST_VIEW_LABEL"
                description="COM_JUDIRECTORY_FIELD_LIST_VIEW_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="details_view"
                type="list"
                default="1"
                label="COM_JUDIRECTORY_FIELD_DETAILS_VIEW_LABEL"
                description="COM_JUDIRECTORY_FIELD_DETAILS_VIEW_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="hide_caption"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_HIDE_CAPTION_LABEL"
                description="COM_JUDIRECTORY_FIELD_HIDE_CAPTION_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="hide_label"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_HIDE_LABEL_LABEL"
                description="COM_JUDIRECTORY_FIELD_HIDE_LABEL_DESC">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="simple_search"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_SIMPLE_SEARCH_LABEL"
                description="COM_JUDIRECTORY_FIELD_SIMPLE_SEARCH_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="advanced_search"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_ADVANCED_SEARCH_LABEL"
                description="COM_JUDIRECTORY_FIELD_ADVANCED_SEARCH_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="filter_search"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_FILTER_SEARCH_LABEL"
                description="COM_JUDIRECTORY_FIELD_FILTER_SEARCH_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="allow_priority"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_ALLOW_PRIORITY_LABEL"
                description="COM_JUDIRECTORY_FIELD_ALLOW_PRIORITY_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="priority"
                type="juordering"
                table="priority"
                default=""
                label="COM_JUDIRECTORY_FIELD_PRIORITY_LABEL"
                description="COM_JUDIRECTORY_FIELD_PRIORITY_DESC"
                />

        <field
                name="priority_direction"
                type="list"
                default="asc"
                label="COM_JUDIRECTORY_FIELD_PRIORITY_DIRECTION_LABEL"
                description="COM_JUDIRECTORY_FIELD_PRIORITY_DIRECTION_DESC"
                >
            <option value="asc">COM_JUDIRECTORY_ASC</option>
            <option value="desc">COM_JUDIRECTORY_DESC</option>
        </field>

        <field
                name="frontend_ordering"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_FRONTEND_ORDERING_LABEL"
                description="COM_JUDIRECTORY_FIELD_FRONTEND_ORDERING_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="backend_list_view"
                type="list"
                default="0"
                label="COM_JUDIRECTORY_FIELD_BACKEND_LIST_VIEW_LABEL"
                description="COM_JUDIRECTORY_FIELD_BACKEND_LIST_VIEW_DESC"
                >
            <option value="0">JNO</option>
            <option value="1">COM_JUDIRECTORY_SHOW_OPTION</option>
            <option value="2">COM_JUDIRECTORY_SHOW_OPTION_AND_DISPLAY_DEFAULT</option>
        </field>

        <field
                name="backend_list_view_ordering"
                type="juordering"
                table="backend_list_view_ordering"
                label="COM_JUDIRECTORY_FIELD_BACKEND_LIST_VIEW_ORDERING_LABEL"
                description="COM_JUDIRECTORY_FIELD_BACKEND_LIST_VIEW_ORDERING_DESC"
                />

        <field
                name="prefix_text_mod"
                type="text"
                default=""
                size="30"
                filter="raw"
                label="COM_JUDIRECTORY_FIELD_PREFIX_TEXT_MOD_LABEL"
                description="COM_JUDIRECTORY_FIELD_PREFIX_TEXT_MOD_DESC"
                />

        <field
                name="suffix_text_mod"
                type="text"
                default=""
                size="30"
                filter="raw"
                label="COM_JUDIRECTORY_FIELD_SUFFIX_TEXT_MOD_LABEL"
                description="COM_JUDIRECTORY_FIELD_SUFFIX_TEXT_MOD_DESC"
                />

        <field
                name="prefix_text_display"
                type="text"
                default=""
                size="30"
                filter="raw"
                label="COM_JUDIRECTORY_FIELD_PREFIX_TEXT_DISPLAY_LABEL"
                description="COM_JUDIRECTORY_FIELD_PREFIX_TEXT_DISPLAY_DESC"
                />

        <field
                name="suffix_text_display"
                type="text"
                default=""
                size="30"
                filter="raw"
                label="COM_JUDIRECTORY_FIELD_SUFFIX_TEXT_DISPLAY_LABEL"
                description="COM_JUDIRECTORY_FIELD_SUFFIX_TEXT_DISPLAY_DESC"
                />

        <field
                name="prefix_suffix_wrapper"
                type="list"
                default="1"
                label="COM_JUDIRECTORY_FIELD_PREFIX_SUFFIX_WRAPPER_LABEL"
                description="COM_JUDIRECTORY_FIELD_PREFIX_SUFFIX_WRAPPER_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="attributes"
                type="textarea"
                default=""
                rows="2"
                cols="40"
                label="COM_JUDIRECTORY_FIELD_ATTRIBUTES_LABEL"
                description="COM_JUDIRECTORY_FIELD_ATTRIBUTES_DESC"
                />

        <field
                name="published"
                type="list"
                default="1"
                label="COM_JUDIRECTORY_FIELD_PUBLISHED_LABEL"
                description="COM_JUDIRECTORY_FIELD_PUBLISHED_DESC"
                >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="ignored_options"
                type="hidden"
                default=""
                />
    </fieldset>

    <fieldset name="publishing">
        <field
                name="publish_up"
                type="calendar"
                class="inputbox"
                default=""
                format="%Y-%m-%d %H:%I:%S"
                filter="user_utc"
                label="COM_JUDIRECTORY_FIELD_PUBLISH_UP_LABEL"
                description="COM_JUDIRECTORY_FIELD_PUBLISH_UP_DESC"
                />

        <field
                name="publish_down"
                type="calendar"
                class="inputbox"
                default=""
                format="%Y-%m-%d %H:%I:%S"
                filter="user_utc"
                label="COM_JUDIRECTORY_FIELD_PUBLISH_DOWN_LABEL"
                description="COM_JUDIRECTORY_FIELD_PUBLISH_DOWN_DESC"
                />

        <field name="created"
               type="calendar"
               class="inputbox"
               default=""
               format="%Y-%m-%d %H:%I:%S"
               filter="user_utc"
               label="COM_JUDIRECTORY_FIELD_CREATED_LABEL"
               description="COM_JUDIRECTORY_FIELD_CREATED_DESC"
                />

        <field
                name="created_by"
                type="user"
                label="COM_JUDIRECTORY_FIELD_CREATED_BY_LABEL"
                description="COM_JUDIRECTORY_FIELD_CREATED_BY_DESC"
                />

        <field name="modified"
               type="calendar"
               class="readonly"
               readonly="true"
               format="%Y-%m-%d %H:%M:%S"
               filter="user_utc"
               label="COM_JUDIRECTORY_FIELD_MODIFIED_LABEL"
               description="COM_JUDIRECTORY_FIELD_MODIFIED_DESC"
                />

        <field name="modified_by"
               type="user"
               class="readonly"
               readonly="true"
               filter="unset"
               label="COM_JUDIRECTORY_FIELD_MODIFIED_BY_LABEL"
               description="COM_JUDIRECTORY_FIELD_MODIFIED_BY_DESC"
                />
    </fieldset>

    <fieldset name="metadata">
        <field name="metatitle"
               type="text"
               size="45"
               label="COM_JUDIRECTORY_FIELD_META_TITLE_LABEL"
               description="COM_JUDIRECTORY_FIELD_META_TITLE_DESC"
                />

        <field name="metakeyword"
               type="textarea"
               class="inputbox"
               rows="3"
               cols="30"
               label="COM_JUDIRECTORY_FIELD_META_KEYWORD_LABEL"
               description="COM_JUDIRECTORY_FIELD_META_KEYWORD_DESC"
                />

        <field name="metadescription"
               type="textarea"
               class="inputbox"
               rows="3"
               cols="30"
               label="COM_JUDIRECTORY_FIELD_META_DESCRIPTION_LABEL"
               description="COM_JUDIRECTORY_FIELD_META_DESCRIPTION_DESC"
                />

        <field type="JUMessage"
               name="seo_tags"
               description="COM_JUDIRECTORY_FIELD_META_TAGS"
               hr="true"
                />
    </fieldset>

    <fields name="metadata">
        <field name="robots"
               type="list"
               fieldset="metadata"
               label="COM_JUDIRECTORY_FIELD_METADATA_ROBOTS_LABEL"
               description="COM_JUDIRECTORY_FIELD_METADATA_ROBOTS_DESC"
                >
            <option value="">COM_JUDIRECTORY_USE_GLOBAL</option>
            <option value="index, follow">COM_JUDIRECTORY_INDEX_FOLLOW</option>
            <option value="noindex, follow">COM_JUDIRECTORY_NOINDEX_FOLLOW</option>
            <option value="index, nofollow">COM_JUDIRECTORY_INDEX_NOFOLLOW</option>
            <option value="noindex, nofollow">COM_JUDIRECTORY_NOINDEX_NOFOLLOW</option>
        </field>

        <field name="author"
               type="text"
               size="20"
               fieldset="metadata"
               label="COM_JUDIRECTORY_FIELD_METADATA_AUTHOR_LABEL"
               description="COM_JUDIRECTORY_FIELD_METADATA_AUTHOR_DESC"
                />

        <field name="rights"
               type="textarea"
               class="inputbox"
               filter="string"
               cols="30"
               rows="2"
               fieldset="metadata"
               label="COM_JUDIRECTORY_FIELD_METADATA_RIGHTS_LABEL"
               description="COM_JUDIRECTORY_FIELD_METADATA_RIGHTS_DESC"
                />

        <field name="xreference"
               type="text"
               class="inputbox"
               size="20"
               fieldset="metadata"
               label="COM_JUDIRECTORY_FIELD_METADATA_XREFERENCE_LABEL"
               description="COM_JUDIRECTORY_FIELD_METADATA_XREFERENCE_DESC"
                />
    </fields>

    <fieldset name="preview">
        <field
                name="preview"
                type="fieldpreview"
                />
    </fieldset>

    <fields name="params">
        <fieldset name="params">
        </fieldset>
    </fields>

    <fieldset name="permissions">
        <field
                id="rules"
                name="rules"
                type="rules"
                label="COM_JUDIRECTORY_PERMISSION_FIELD_VALUE_LABEL"
                translate_label="false"
                filter="rules"
                validate="rules"
                component="com_judirectory"
                section="field_field_value"
                />
    </fieldset>
</form>
