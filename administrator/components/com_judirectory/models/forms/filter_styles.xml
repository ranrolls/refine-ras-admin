<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUDIRECTORY_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />

        <field
                name="template"
                type="filter_template"
                label="COM_JUDIRECTORY_FILTER_TEMPLATE"
                description="COM_JUDIRECTORY_FILTER_TEMPLATE_DESC"
                onchange="this.form.submit();"
                >
            <option value="">COM_JUDIRECTORY_SELECT_TEMPLATE</option>
        </field>
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_JUDIRECTORY_LIST_FULL_ORDERING"
                description="COM_JUDIRECTORY_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="style.lft ASC"
                >
            <option value="">COM_JUDIRECTORY_SORT_BY</option>
            <option value="style.lft ASC">COM_JUDIRECTORY_SORT_BY_STYLE_TREE</option>
            <option value="style.id ASC">COM_JUDIRECTORY_SORT_BY_ID_ASC</option>
            <option value="style.id DESC">COM_JUDIRECTORY_SORT_BY_ID_DESC</option>
            <option value="style.title ASC">COM_JUDIRECTORY_SORT_BY_TITLE_ASC</option>
            <option value="style.title DESC">COM_JUDIRECTORY_SORT_BY_TITLE_DESC</option>
            <option value="tpl.id ASC">COM_JUDIRECTORY_SORT_BY_TEMPLATE_ID_ASC</option>
            <option value="tpl.id DESC">COM_JUDIRECTORY_SORT_BY_TEMPLATE_ID_DESC</option>
            <option value="plg.title ASC">COM_JUDIRECTORY_SORT_BY_TEMPLATE_TITLE_ASC</option>
            <option value="plg.title DESC">COM_JUDIRECTORY_SORT_BY_TEMPLATE_TITLE_DESC</option>
            <option value="plg.author ASC">COM_JUDIRECTORY_SORT_BY_AUTHOR_ASC</option>
            <option value="plg.author DESC">COM_JUDIRECTORY_SORT_BY_AUTHOR_DESC</option>
            <option value="plg.version ASC">COM_JUDIRECTORY_SORT_BY_VERSION_ASC</option>
            <option value="plg.version DESC">COM_JUDIRECTORY_SORT_BY_VERSION_DESC</option>
            <option value="style.created ASC">COM_JUDIRECTORY_SORT_BY_CREATED_ASC</option>
            <option value="style.created DESC">COM_JUDIRECTORY_SORT_BY_CREATED_DESC</option>
            <option value="style.home ASC">COM_JUDIRECTORY_SORT_BY_DEFAULT_ASC</option>
            <option value="style.home DESC">COM_JUDIRECTORY_SORT_BY_DEFAULT_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUDIRECTORY_LIST_LIMIT"
                description="COM_JUDIRECTORY_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>