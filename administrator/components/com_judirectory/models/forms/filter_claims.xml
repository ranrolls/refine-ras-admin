<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUDIRECTORY_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"/>
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_JUDIRECTORY_LIST_FULL_ORDERING"
                description="COM_JUDIRECTORY_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="r.created ASC"
                >
            <option value="">COM_JUDIRECTORY_SORT_BY</option>
            <option value="cl.id ASC">COM_JUDIRECTORY_SORT_BY_ID_ASC</option>
            <option value="cl.id DESC">COM_JUDIRECTORY_SORT_BY_ID_DESC</option>
            <option value="listing.title ASC">COM_JUDIRECTORY_SORT_BY_LISTING_TITLE_ASC</option>
            <option value="listing.title DESC">COM_JUDIRECTORY_SORT_BY_LISTING_TITLE_DESC</option>
            <option value="ua.name ASC">COM_JUDIRECTORY_SORT_BY_USERNAME_ASC</option>
            <option value="ua.name DESC">COM_JUDIRECTORY_SORT_BY_USERNAME_ASC</option>
            <option value="cl.name ASC">COM_JUDIRECTORY_SORT_BY_NAME_ASC</option>
            <option value="cl.name DESC">COM_JUDIRECTORY_SORT_BY_NAME_DESC</option>
            <option value="cl.phone ASC">COM_JUDIRECTORY_SORT_BY_PHONE_ASC</option>
            <option value="cl.phone DESC">COM_JUDIRECTORY_SORT_BY_PHONE_DESC</option>
            <option value="cl.email ASC">COM_JUDIRECTORY_SORT_BY_EMAIL_ASC</option>
            <option value="cl.email DESC">COM_JUDIRECTORY_SORT_BY_EMAIL_DESC</option>
            <option value="cl.message ASC">COM_JUDIRECTORY_SORT_BY_MESSAGE_ASC</option>
            <option value="cl.message DESC">COM_JUDIRECTORY_SORT_BY_MESSAGE_DESC</option>
            <option value="cl.created ASC">COM_JUDIRECTORY_SORT_BY_CREATED_ASC</option>
            <option value="cl.created DESC">COM_JUDIRECTORY_SORT_BY_CREATED_DESC</option>
            <option value="cl.admin_notes ASC">COM_JUDIRECTORY_SORT_BY_ADMIN_NOTES_ASC</option>
            <option value="cl.admin_notes DESC">COM_JUDIRECTORY_SORT_BY_ADMIN_NOTES_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUDIRECTORY_LIST_LIMIT"
                description="COM_JUDIRECTORY_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>