<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUDIRECTORY_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_JUDIRECTORY_LIST_FULL_ORDERING"
                description="COM_JUDIRECTORY_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="tag.ordering ASC"
                >
            <option value="">COM_JUDIRECTORY_SORT_BY</option>
            <option value="tag.id ASC">COM_JUDIRECTORY_SORT_BY_ID_ASC</option>
            <option value="tag.id DESC">COM_JUDIRECTORY_SORT_BY_ID_DESC</option>
            <option value="tag.title ASC">COM_JUDIRECTORY_SORT_BY_TITLE_ASC</option>
            <option value="tag.title DESC">COM_JUDIRECTORY_SORT_BY_TITLE_DESC</option>
            <option value="total_listings ASC">COM_JUDIRECTORY_SORT_BY_TOTAL_LISTINGS_ASC</option>
            <option value="total_listings DESC">COM_JUDIRECTORY_SORT_BY_TOTAL_LISTINGS_DESC</option>
            <option value="tag.ordering ASC">COM_JUDIRECTORY_SORT_BY_ORDERING_ASC</option>
            <option value="tag.ordering DESC">COM_JUDIRECTORY_SORT_BY_ORDERING_DESC</option>
            <option value="tag.published ASC">COM_JUDIRECTORY_SORT_BY_PUBLISHED_ASC</option>
            <option value="tag.published DESC">COM_JUDIRECTORY_SORT_BY_PUBLISHED_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUDIRECTORY_LIST_LIMIT"
                description="COM_JUDIRECTORY_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>