<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_JUDIRECTORY_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
                />

        <field
                name="type"
                type="list"
                label="COM_JUDIRECTORY_FILTER_TYPE"
                description="COM_JUDIRECTORY_FILTER_TYPE_DESC"
                onchange="this.form.submit();"
                >
            <option value="">COM_JUDIRECTORY_SELECT_TYPE</option>
            <option value="field">COM_JUDIRECTORY_TYPE_FIELD</option>
            <option value="template">COM_JUDIRECTORY_TYPE_TEMPLATE</option>
        </field>
    </fields>

    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_JUDIRECTORY_LIST_FULL_ORDERING"
                description="COM_JUDIRECTORY_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="plg.title ASC">
            <option value="">COM_JUDIRECTORY_SORT_BY</option>
            <option value="plg.id ASC">COM_JUDIRECTORY_SORT_BY_ID_ASC</option>
            <option value="plg.id DESC">COM_JUDIRECTORY_SORT_BY_ID_DESC</option>
            <option value="plg.title ASC">COM_JUDIRECTORY_SORT_BY_TITLE_ASC</option>
            <option value="plg.title DESC">COM_JUDIRECTORY_SORT_BY_TITLE_DESC</option>
            <option value="plg.type ASC">COM_JUDIRECTORY_SORT_BY_TYPE_ASC</option>
            <option value="plg.type DESC">COM_JUDIRECTORY_SORT_BY_TYPE_DESC</option>
            <option value="plg.author ASC">COM_JUDIRECTORY_SORT_BY_AUTHOR_ASC</option>
            <option value="plg.author DESC">COM_JUDIRECTORY_SORT_BY_AUTHOR_DESC</option>
            <option value="plg.email ASC">COM_JUDIRECTORY_SORT_BY_EMAIL_ASC</option>
            <option value="plg.email DESC">COM_JUDIRECTORY_SORT_BY_EMAIL_DESC</option>
            <option value="plg.website ASC">COM_JUDIRECTORY_SORT_BY_WEBSITE_ASC</option>
            <option value="plg.website DESC">COM_JUDIRECTORY_SORT_BY_WEBSITE_DESC</option>
            <option value="plg.date ASC">COM_JUDIRECTORY_SORT_BY_DATE_ASC</option>
            <option value="plg.date DESC">COM_JUDIRECTORY_SORT_BY_DATE_DESC</option>
            <option value="plg.version ASC">COM_JUDIRECTORY_SORT_BY_VERSION_ASC</option>
            <option value="plg.version DESC">COM_JUDIRECTORY_SORT_BY_VERSION_DESC</option>
            <option value="plg.folder ASC">COM_JUDIRECTORY_SORT_BY_FOLDER_ASC</option>
            <option value="plg.folder DESC">COM_JUDIRECTORY_SORT_BY_FOLDER_DESC</option>
            <option value="plg.core ASC">COM_JUDIRECTORY_SORT_BY_CORE_ASC</option>
            <option value="plg.core DESC">COM_JUDIRECTORY_SORT_BY_CORE_DESC</option>
            <option value="plg.default ASC">COM_JUDIRECTORY_SORT_BY_DEFAULT_ASC</option>
            <option value="plg.default DESC">COM_JUDIRECTORY_SORT_BY_DEFAULT_DESC</option>
        </field>

        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_JUDIRECTORY_LIST_LIMIT"
                description="COM_JUDIRECTORY_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>